.book-touch {
  position: relative;
}

/*  */
.book-item-delete {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  width: 120px;
  z-index: 1;

  color: #fff;
  background: rgb(238, 59, 59);
  font-size: 28rpx;
}

/*  */
.book-item {
  position: relative;
  z-index: 2;

  display: flex;
  flex-direction: row;
  padding: 32rpx;
  background-color: #fff;

  transition: transform 100ms;
}

/*  */
.book-item-image {
  flex: 0 0 auto;
  width: 200rpx;
  height: 278rpx;
  border-radius: 8rpx;
  margin-right: 24rpx;
}
.book-item-content {
  flex: 1;
 
  /* fix ellipse */
  min-width: 100rpx;

  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: flex-start;
}
.book-item-title {
  display: block;
  width: 100%;

  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;

  font-family: "PingFangSC-Medium";
  font-size: 36rpx;
  height: 42rpx;

  margin-bottom: 16rpx;
}

/*  */
.book-item-rate {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 20rpx;
}
.book-item-rate-star {
  margin: -10rpx 0 0 0;
}
.book-item-rate-num {
  color: #e09015;
  font-size: 28rpx;
  margin-right: 24rpx;
}
.book-item-rate-people {
  color: rgb(99, 110, 114);
  font-size: 24rpx;
}

/*  */
.book-item-author {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.book-item-author-text {
  color: rgb(99, 110, 114);
  font-family: "PingFang-SC";
  font-size: 26rpx;
  line-height: 38rpx;
}

/*  */
.book-item-complete {
  margin-top: auto;
  color: rgb(189, 195, 199);
}
