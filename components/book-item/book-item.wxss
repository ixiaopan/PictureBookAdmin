.book-item {
  position: relative;
  display: flex;
  flex-direction: row;
  margin-bottom: 32rpx;
}
.book-item:last-child {
  margin-bottom: 0;
}

/*  */
.book-item-image {
  flex: 0 0 auto;
  width: 200rpx;
  height: 278rpx;
  border-radius: 8rpx;
  margin-right: 24rpx;
}
.book-item-content {
  flex: 1;

  /* fix ellipse */
  min-width: 100rpx;
}
.book-item-title {
  display: block;
  width: 100%;

  font-family: "PingFangSC-Medium";
  font-size: 36rpx;
  height: 42rpx;

  margin-bottom: 16rpx;
}

/*  */
.book-item-rate {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 16rpx;
}
.book-item-rate-star {
  margin: -10rpx -4rpx 0 0;
}
.book-item-rate-num {
  color: #e09015;
  font-size: 28rpx;
  margin-right: 24rpx;
}
.book-item-rate-people {
  color: rgb(104, 104, 104);
  font-size: 28rpx;
}

/*  */
.book-item-author {
  font-family: "PingFang-Medium";
  font-size: 28rpx;
  color: rgb(104, 104, 104);
}

.book-item-updated-time {
  margin-top: auto;
  font-family: "PingFang-SC";
  font-size: 24rpx;
  color: rgb(104, 104, 104);
}
