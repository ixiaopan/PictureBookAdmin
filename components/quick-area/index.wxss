.quick-area {
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.quick-area-item {
  width: 50%;
  margin-bottom: 32rpx;
  box-sizing: border-box;
}
.quick-area-item:nth-child(2n) {
  padding-left: 16rpx;
}
.quick-area-item:nth-child(2n + 1) {
  padding-right: 16rpx;
}
.quick-area-item-inner {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

  width: 100%;
  box-sizing: border-box;
  padding: 40rpx 24rpx;
  border-radius: 20rpx;
  background-color: #fff;
  box-shadow: 0 0 10rpx #ececec;
}
.quick-area-text {
  color: #333;
  font-size: 28rpx;
  font-family: Arial, Helvetica, sans-serif;
}
.quick-area-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 18rpx;
}