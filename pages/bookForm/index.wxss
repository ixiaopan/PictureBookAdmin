page {
  padding-bottom: env(safe-area-inset-bottom);
}

.record-page {
  padding: 0 0 260rpx;
}

.form-item-item:first-child {
  padding-top: 40rpx;
}

.record-scan {
  width: 40rpx;
  height: 40rpx;
  padding: 0 20rpx;
}

.record-action {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 220rpx;
  z-index: 9999;

  box-sizing: border-box;
  border-top: 2rpx solid rgb(230, 230, 230);
  background-color: #fff;

  padding-bottom: env(safe-area-inset-bottom);
}

.record-button {
  margin: 0 auto;
  width: 80% !important;
}
